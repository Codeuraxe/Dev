    }
  }

  .neon {
    animation: neon-pulse 3s infinite alternate;
  }

  .timeline {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
    padding: 20px 0;
  }

  .timeline::before {
    content: '';
    position: absolute;
    width: 2px;
    background-color: #6726ff;
    top: 0;
    bottom: 0;
    left: 50%;
    margin-left: -1px;
  }

  .timeline-container {
    display: flex;
